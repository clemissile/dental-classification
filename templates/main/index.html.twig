{% extends 'base.html.twig' %}

{% block title %}Bienvenue{% endblock %}

{% block body %}
    <div class="container">
        <h1>Bienvenue !</h1>

        <div class="row my-3">
            <div class="col-md-12">
                Sur cette interface, vous pouvez gérer vos différents diagnostics.
            </div>
        </div>

        <div class="row mt-5 mb-2">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h1 class="card-title">{{ total }}</h1>
                        <h5 class="card-subtitle mb-2 text-muted">Nombre de diagnostics</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h1 class="card-title">{{ avgage|number_format(1, ',', '.') }}</h1>
                        <h5 class="card-subtitle mb-2 text-muted">Âge moyen des patients</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h1 class="card-title">{{ emptydiag }}</h1>
                        <h5 class="card-subtitle mb-2 text-muted">Diagnostics à catégoriser</h5>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <canvas id="myChart" height="100"></canvas>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
    let diagLab = [];
    let diagVal = [];

    {% for diag in diagtype %}
        diagLab.push('{{ diag.diagnoseType }}');
        diagVal.push({{ diag.nbDiag }});
    {% endfor %}

    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: diagLab,
            datasets: [{
                label: '# types de diagnostic',
                data: diagVal,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
</script>
{% endblock %}
